<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailRestaurantActivity">


    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/info_layout"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">

        <ImageView
            android:id="@+id/restaurantPhotoImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_restaurant_photo" />
    </com.google.android.material.appbar.CollapsingToolbarLayout>



    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/collapsing_toolbar"
        app:layout_constraintBottom_toTopOf="@+id/actions_layout"
        app:layout_constraintHeight_percent="0.15">

        <TextView
            android:id="@+id/restaurantNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Name"
            android:textSize="18sp"
            android:padding="8dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/restaurantAddressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant Address"
                android:textSize="18sp"
                android:padding="8dp"
                android:layout_toStartOf="@+id/restaurantStar"/>

            <ImageView
                android:id="@+id/restaurantStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_star_off"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </RelativeLayout>

        <TextView
            android:id="@+id/restaurantOpeningHoursTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Opening Hours"
            android:textSize="18sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/restaurantTypeOfRestaurantTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Type"
            android:textSize="18sp"
            android:padding="8dp"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/actions_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/info_layout"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintHeight_percent="0.15">

        <ImageButton
            android:id="@+id/callButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_call"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="onClickCallButton"/>

        <ImageButton
            android:id="@+id/likeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_star_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="onClickLikeButton"/>

        <ImageButton
            android:id="@+id/restaurantWebsiteButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_website"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="onClickWebsiteButton"/>
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actions_layout"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabWorkmateWantToEat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
